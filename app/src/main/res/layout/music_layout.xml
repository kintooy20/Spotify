<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:orientation="vertical"
    android:id="@+id/songcontainer">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Havana"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="20sp"
         />


    <TextView

        android:layout_below="@id/txtTitle"
        android:id="@+id/txtSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camila Cabello"
        android:fontFamily= "@font/proxima_nova"
               />


    <TextView

        android:layout_toRightOf="@id/txtSinger"
        android:layout_below="@id/txtTitle"
        android:id="@+id/txtdot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova"
        android:text="@string/text_dot"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"


        />

    <TextView
        android:layout_below="@id/txtTitle"
        android:id="@+id/txtAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Young-Thug Havana"
        android:fontFamily="@font/proxima_nova"
        android:layout_toRightOf="@id/txtdot"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_menu_list"
        tools:ignore="VectorDrawableCompat" />



</RelativeLayout>